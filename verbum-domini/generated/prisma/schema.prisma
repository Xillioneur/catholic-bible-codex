// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Testament {
  OLD
  NEW
}

enum BookGroup {
  PENTATEUCH
  HISTORICAL
  WISDOM
  PROPHETS
  GOSPELS
  ACTS
  EPISTLES
  REVELATION
}

model Translation {
  id             String   @id @default(cuid())
  name           String   @unique // e.g., "New American Bible, Revised Edition"
  abbreviation   String   @unique // e.g., "NABRE"
  language       String   @default("English")
  copyright      String?
  isPublicDomain Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  verses         Verse[]
}

model Book {
  id                            String    @id @default(cuid())
  name                          String    @unique // e.g., "Tobit"
  abbreviation                  String    @unique // e.g., "Tb"
  abbreviation_case_insensitive String    @unique // e.g., "tb"
  order                         Int       @unique // 1-73
  testament                     Testament
  group                         BookGroup
  isDeuterocanonical            Boolean   @default(false)
  chapters                      Chapter[]
}

model Chapter {
  id     String  @id @default(cuid())
  number Int
  bookId String
  book   Book    @relation(fields: [bookId], references: [id])
  verses Verse[]

  @@unique([bookId, number])
}

model Verse {
  id            String      @id @default(cuid())
  number        Int
  text          String
  chapterId     String
  chapter       Chapter     @relation(fields: [chapterId], references: [id])
  translationId String
  translation   Translation @relation(fields: [translationId], references: [id])

  // For easy referencing like "John 6:51"
  bookName      String
  chapterNumber Int

  bookmarks  Bookmark[]
  highlights Highlight[]
  notes      Note[]

  @@unique([translationId, chapterId, number])
  @@index([bookName, chapterNumber, number])
}

// User Study Tools
model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  verseId   String
  verse     Verse    @relation(fields: [verseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  folder    String?

  @@unique([userId, verseId])
}

model Highlight {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  verseId   String
  verse     Verse    @relation(fields: [verseId], references: [id], onDelete: Cascade)
  color     String // Hex or liturgical color name
  createdAt DateTime @default(now())

  @@unique([userId, verseId])
}

model Note {
  id        String   @id @default(cuid())
  content   String // Markdown supported
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  verseId   String
  verse     Verse    @relation(fields: [verseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, verseId])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  bookmarks  Bookmark[]
  highlights Highlight[]
  notes      Note[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
